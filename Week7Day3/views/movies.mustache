<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">


    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <link rel="stylesheet" href="style.css">
  </head>
  <body>
    <h1 id="header">Movies</h1>
    <form method="POST" action="/movies/create-movie" id="create">
        <input type="text" placeholder = "Title" name="title" />
        <input type="text" placeholder = "ImageURL" name="imageURL" />
        <input type="text" placeholder = "Description" name="description" />
        <input type="text" placeholder = "Genre" name="genre" />
        <button>Save</button>
    </form>

    <ul class="list-group">
    {{#allMovies}} 

    <li class="list-group-item">
      
      
      <p><h2>{{title}}</h2></p>

      <form method="POST" action="/movies/delete-movie">
        <button>Delete</button>
        <input type="hidden" value={{movieID}} name="movieID" />
      </form>
      <p></p>  
      <form method="POST" action="/movies/{{movieID}}">
        <button>Details</button>
        <input type="hidden" value={{movieID}} />
      </form>  
    </li>

    {{/allMovies}}
    </ul>

    <div>
    {{#movie}}
    <h1>{{title}}<h1>
    <img src='{{imageURL}}'>
    <p><h4>{{genre}}</h4></p> 
    <p>{{description}}</p>

    {{/movie}}
    </div>

    <div>
    {{#genreList}}
      <h3>Filter<h3>
      <form method="POST" action="/movies/genre/{{genre}}">
        <button>{{genre}}</button>
        <input type="hidden" value={{genre}} />
      </form> 
    {{/genreList}}
    </div>


    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>

  </body>
</html>